<h2 class="text-light text-center">Edit <%= resource_name.to_s.humanize %></h2>
<%= link_to "Next", new_user_session_path, class: "text-light text-center"%>
</div>
<div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 mt-5">
 
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %> 
  
    <%= f.label :name %><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "email", class:"form-control mt-2 mb-2" %>

    <%= f.label :email %><br />
    <%= f.email_field :email ,autocomplete: "email", class:"form-control mt-2 mb-2" %>
   

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
       <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %> 
   
    <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
    <%= f.password_field :password, autocomplete: "new-password", class:"form-control mt-2 mb-2" %>
    <% if @minimum_password_length %>
      <br />
      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %> 
   
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class:"form-control mt-2 mb-2" %>  
   
    <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
    <%= f.password_field :current_password, autocomplete: "current-password", class:"form-control mt-2 mb-2" %> 
  
    <%= f.submit "Update", class:"btn btn-outline-warning" %>
  
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
</div>