<h2 class="text-light text-center">Log In</h2>
<%= link_to "Sign Up", new_user_registration_path, class: "text-light text-center"%>
</div>
<div class="col-md-4 offset-md-4 col-sm-8 offset-sm-2 mt-5">
 
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
   
     
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email",  class:"form-control mt-5 mb-2 opacity-75" %>  
     
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control mt-4 mb-2 opacity-75" %> 

  <% if devise_mapping.rememberable? %> 
      <%= f.check_box :remember_me %>
      <%= f.label :remember_me %> <br />
  <% end %> 
   
  <%= f.submit "Log in", class:"btn btn-outline-primary fw-bold mt-5 center" %>
  
<% end %>
<h4 class=" text-center log_link"><%= render "devise/shared/links" %></h4>
</div>
