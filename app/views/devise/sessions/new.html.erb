<div class="col-12"> 
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="menu">
<a href="/" class="text-light"><svg xmlns="http://www.w3.org/2000/svg" width="26" height="36" fill="currentColor" class="bi bi-arrow-left" viewBox="0 0 16 16">
     <path fill-rule="evenodd" d="M15 8a.5.5 0 0 0-.5-.5H2.707l3.147-3.146a.5.5 0 1 0-.708-.708l-4 4a.5.5 0 0 0 0 .708l4 4a.5.5 0 0 0 .708-.708L2.707 8.5H14.5A.5.5 0 0 0 15 8z"/>
   </svg>
</a>
<h2 class="text-light text-center">LOG IN</h2>
<%= f.submit "Log In", class: "log"%>
</div>
    <div class="bg-light mt-5 p-3 col-md-4 offset-md-4 col-sm-8 offset-sm-2 mt-5 mb-5">
    <%= f.email_field :email, autocomplete: "email", placeholder: "Email",  class:"w-100 feild" %>
    <hr/> 
    
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"w-100 feild opacity-75 back" %> 
    </div>
     
<% end %>
<h4 class=" text-center log_link mt-5"><%= render "devise/shared/links" %></h4>
</div>
