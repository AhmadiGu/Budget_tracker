<h2 class="text-light text-center">Details</h2>
<span></span> 
</div>
<div class="col-10 offset-1 mt-5 p-2"> 
  <% if notice %>
  <p class="alert alert-success"><%= notice %></p>
  <% end %>
  <% if alert %>
  <p class="alert alert-danger"><%= alert %></p>
  <% end %>
    <div class="row row-cols-1 shadow p-3 mb-5 bg-body opacity-75"> 
        
      <div class="border-bottom mb-3"> 
        <h5><img src="<%= @category.icon%>" ><span><%= @category.name %></span></h5>  
      </div> 

      <div class="border-bottom  mb-3"> 
        <% if @entities.empty? %>
         <h5>Transactions</h5>
          <p>No transactions have been added yet.</p>
        <% else %> 
         <h5>Transactions</h5>
         <% @entities.each do |entity| %>
           <div>
            <p>Name:<%= entity.name%></p>
            <div class="row row-cols-2">
            <small >created_at:<%= entity.created_at.strftime("%d %b %Y") %></small>
            <%= link_to 'Edit this Transaction', "#{edit_entity_path(entity.id)}?category_id=#{@category.id}", class:"btn btn-outline-success btn-sm" %>
           </div> </div>
         <% end %> 
       <% end %> 
      </div>  

      <div class="row row-cols-2"><h5>TOTAL PAYMENT:</h5><span class="text-end">$<%= @category.entities.sum(:amount)%></span></div>
   </div> 
</div>
<div class="btn_dev1 fixed-bottom">
 <%= link_to 'ADD NEW TRANSACTION',  "#{new_entity_path}?category_id=#{@category.id}", class:"btn btn-outline-light pt-3 pb-3 log-btn" %>
</div>